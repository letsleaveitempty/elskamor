= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  = f.file_field(:main_image)
  .field
    = f.label :title
    %br/
    = f.text_field :title, {style: "width: 800px; height: 50px;"}
  / = cl_image_upload_tag(:main_image)
  .field
    = f.label :body
    %br/
    = f.bootsy_area :body, {style: "width: 800px; height: 550px;"}
  .actions
    = f.submit