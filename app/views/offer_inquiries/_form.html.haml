= form_for(@inquiry) do |f|
  - if @inquiry.errors.any?
    #error_explanation
      %h2
        = pluralize(@inquiry.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @inquiry.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :message
    %br/
    = f.bootsy_area :message
  .actions
    = f.submit