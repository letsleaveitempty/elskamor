!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "", name: "description"}/
    %meta{content: "", name: "author"}/
    %link{href: "assets/favicon.png", rel: "shortcut icon"}/
    %title Elskamor
    / Bootstrap core CSS
    %link{href: "css/bootstrap.css", rel: "stylesheet"}/
    / Custom styles for this template
    %link{href: "http://fonts.googleapis.com/css?family=Raleway:400,800", rel: "stylesheet", type: "text/css"}/
    %link{href: "http://fonts.googleapis.com/css?family=Noto+Serif:700,400italic", rel: "stylesheet", type: "text/css"}/
    %link{href: "css/font-awesome.min.css", rel: "stylesheet"}/
    %link{href: "css/style.css", rel: "stylesheet"}/
    %link{href: "css/responsive.css", rel: "stylesheet"}/
    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
  %body
    / / begin:navbar
    / %nav.navbar.navbar-default.navbar-transparent.navbar-fixed-top{role: "navigation"}
    /   .container
    /     / Brand and toggle get grouped for better mobile display
    /     .navbar-header
    /       %button.navbar-toggle{"data-target" => "#navbar-top", "data-toggle" => "collapse", type: "button"}
    /         %span.sr-only Toggle navigation
    /         %span.icon-bar
    /         %span.icon-bar
    /         %span.icon-bar
    /       %a.navbar-brand{href: root_path}
    /         %i.fa.fa-recycle
    /         = succeed "amor" do
    /           %span Elsk
    /     / Collect the nav links, forms, and other content for toggling
    #navbar-top.collapse.navbar-collapse
      .container
        %a.navbar-brand{href: root_path}
          ELSKAMOR
          %i.fa.fa-heart
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{href: root_path} Home
          %li
            %a{href: posts_path} Blog
          %li
            %a{href: offers_path} Offers
          - if user_signed_in?
            %li
              / %a{href: destroy_user_session_path, method: :delete} Logout
              = link_to 'Sign out', destroy_user_session_path
          -else
            %li
              %a{href: new_user_session_path} Sign in

            / %li.dropdown
            /   %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            /     Pages
            /     %b.caret
            /   %ul.dropdown-menu
            /     %li
            /       %a{href: "#"} Blog
            /     %li.active
            /       %a{href: "#"} Single
            /     %li
            /       %a{href: "#"} Archives
            /     %li
            /       %a{href: "#"} Category
            /     %li
            /       %a{href: "#"} Portfolio
            /     %li
            /       %a{href: "#"} Portfolio Single

    %section#header{style: "background-image: url('http://cdn.morguefile.com/imageData/public/files/g/greyerbaby/09/l/1379806627d35ez.jpg');"}
      .container
        .row
          %h1.text-center{style: "color: white !important"}
            ELSKAMOR
            %i.fa.fa-heart
          / .col-md-8.col-md-offset-2
          /   .title-desc
          /     %p Welcome to
          /     %h2 Elskamor
      / .overlay
/ begin:content
%section#content
  .container
    = yield

%section#footer
  .container
    .row
      .col-md-4
        .widget
          %h3 We want to create new adventures and share our journey thru the world as vegetarians and vegans. Elskamor combines our love for travel and vegetarian & vegan food.
          .btn.btn-default= link_to 'Read the Blog', posts_path
      .col-md-4
        .widget
          %h3 Find inspiration here to start your next journey thru the world as vegetarians and vegans. #AdventureTravel #Eco-Travel #Vegetarian #Vegan #Yoga #Surf #Climbing
          .btn.btn-default= link_to 'Look for Offers', offers_path
      .col-md-4
        .footer-logo
          %h2
            Elskamor
            %i.fa.fa-heart
          %br/
          %p.muted © 2014 Berlin
          %a{href: "#"} Terms of Service
          %br
          %a{href: "#"} Privacy
/ end:footer
/ begin:copyright
%section#copyright
  .container
    .row
      .col-md-6.col-sm-6.copy-left
        %p
          Copyright © 2014
          = succeed "." do
            %strong Elskamor
      .col-md-6.col-sm-6.copy-right
        %ul.list-inline.social-icon
          %li
            %a.icon-twitter{"data-original-title" => "Twitter", "data-placement" => "top", href: "https://twitter.com/Elskamor", rel: "tooltip", title: "", target: "_blank"}
              %i.fa.fa-twitter
          %li
            %a.icon-facebook{"data-original-title" => "Facebook", "data-placement" => "top", href: "https://www.facebook.com/elskamor", rel: "tooltip", title: "", target: "_blank"}
              %i.fa.fa-facebook-square
          %li
            %a.icon-youtube{"data-original-title" => "Youtube", "data-placement" => "top", href: "https://www.youtube.com/user/Elskamor", rel: "tooltip", title: "", target: "_blank"}
              %i.fa.fa-youtube
          / %li
          /   %a.icon-instagram{"data-original-title" => "Instagram", "data-placement" => "top", href: "#", rel: "tooltip", title: "", target: "_blank"}
          /     %i.fa.fa-instagram
          %li
            %a.icon-pinterest{"data-original-title" => "Pinterest", "data-placement" => "top", href: "http://www.pinterest.com/Elskamor/", rel: "tooltip", title: "", target: "_blank"}
              %i.fa.fa-pinterest


